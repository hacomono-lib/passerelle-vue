{
  "name": "@passerelle/insider-nuxt",
  "version": "0.0.1",
  "description": "passerelle insider module for nuxt3",
  "repository": {
    "type": "git",
    "url": "git@github.com:hacomono-lib/passerelle.git",
    "directory": "packages/insider-nuxt"
  },
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/types.d.ts",
      "import": "./dist/module.mjs",
      "require": "./dist/module.cjs"
    }
  },
  "main": "./dist/module.cjs",
  "types": "./dist/types.d.ts",
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "prepare": "nuxt-module-build --stub && nuxt prepare playground",
    "dev": "npm-watch",
    "build": "nuxt-module-build",
    "test": "vitest run",
    "typecheck": "tsc --noEmit -p tsconfig.json",
    "clean": "rm -rf dist playground/.nuxt"
  },
  "watch": {
    "build": "./src/**"
  },
  "dependencies": {
    "@nuxt/kit": "^3.0.0",
    "@passerelle/insider-vue": "^0.0.1"
  },
  "devDependencies": {
    "@nuxt/module-builder": "^0.4.0",
    "@nuxt/schema": "^3.5.0",
    "@nuxt/test-utils": "^3.5.0",
    "@types/node": "^18",
    "nodemon": "^3.0.1",
    "npm-watch": "^0.11.0",
    "nuxt": "^3.5.0",
    "typescript": "^5.1.6",
    "vitest": "^0.32.2"
  },
  "peerDependencies": {
    "nuxt": "^3.0.0"
  },
  "peerDependenciesMeta": {
    "nuxt": {
      "optional": true
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
