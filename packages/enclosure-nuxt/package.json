{
  "name": "@passerelle/enclosure-nuxt",
  "version": "0.0.1",
  "description": "passerelle enclosure module for nuxt3",
  "repository": {
    "type": "git",
    "url": "git@github.com:hacomono-lib/passerelle.git",
    "directory": "packages/enclosure-nuxt"
  },
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/types.d.ts",
      "import": "./dist/module.mjs",
      "require": "./dist/module.cjs"
    },
    "./v2/dist": {
      "types": "./v2/dist/index.d.ts",
      "import": "./v2/dist/index.mjs",
      "require": "./v2/dist/index.js"
    }
  },
  "main": "./dist/module.cjs",
  "types": "./dist/types.d.ts",
  "files": [
    "src",
    "dist",
    "v2"
  ],
  "scripts": {
    "prepare": "nuxt-module-build --stub && nuxt prepare playground",
    "dev": "npm-watch",
    "build": "yarn build:v2 && yarn build:v3",
    "build:v3": "nuxt-module-build",
    "build:v2": "cd v2 && tsup",
    "test": "vitest run",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist playground/.nuxt"
  },
  "watch": {
    "build:v3": "./src/**",
    "build:v2": "./v2/src/**"
  },
  "dependencies": {
    "@intlify/vue-router-bridge": "^1.0.1",
    "@passerelle/enclosure-vue": "^0.0.1",
    "vue-demi": "^0.13.5"
  },
  "devDependencies": {
    "@nuxt/module-builder": "^0.4.0",
    "@nuxt/schema": "^3.5.0",
    "@nuxt/test-utils": "^3.5.0",
    "@nuxt2/types": "npm:@nuxt/types@^2.15.8",
    "@types/node": "^18",
    "nodemon": "^3.0.1",
    "npm-watch": "^0.11.0",
    "nuxt": "^3.5.0",
    "nuxt2": "npm:nuxt@^2.15.8",
    "tsup": "^7.1.0",
    "typescript": "^5.1.6",
    "vitest": "^0.32.2"
  },
  "peerDependencies": {
    "@nuxt/kit": "^3.0.0",
    "nuxt": "^2.15.0 || ^3.0.0"
  },
  "peerDependenciesMeta": {
    "@intlify/vue-router-bridge": {
      "optional": true
    },
    "@nuxt/kit": {
      "optional": true
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
