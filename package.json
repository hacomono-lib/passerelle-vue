{
  "name": "passerelle",
  "version": "3.0.0",
  "description": "passerelle: A universal library enabling seamless navigation between SPAs via an embedded portal. Track and manage URL hash changes across diverse front-end frameworks.",
  "author": "mew-ton <mxl_usmarc@slmail.mewton.jp>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:hacomono-lib/passerelle.git"
  },
  "type": "module",
  "private": true,
  "workspaces": [
    "./packages/*",
    "./fixtures/*",
    "./tests/*"
  ],
  "scripts": {
    "prepare": "turbo run prepare --parallel",
    "dev": "turbo run dev --parallel --filter='./packages/*'",
    "dev:vue2": "yarn switch:vue2 && turbo run dev --parallel --filter=playground-enclosure-vue... --filter=playground-insider-vue...",
    "dev:vue3": "yarn switch:vue3 && turbo run dev --parallel --filter=playground-enclosure-vue... --filter=playground-insider-vue...",
    "preview": "turbo run dev --parallel --filter='./playgrounds/*'",
    "build": "turbo run build",
    "build:graph": "turbo run build --graph",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "clean": "turbo run clean && turbo daemon clean",
    "switch:vue2": "vue-demi switch 2 && @intlify/vue-router-bridge switch 3",
    "switch:vue3": "vue-demi switch 3 && @intlify/vue-router-bridge switch 4",
    "publish-packages": "changeset publish"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.2",
    "@typescript-eslint/eslint-plugin": "^5.60.0",
    "@typescript-eslint/parser": "^5.60.0",
    "changesets": "^1.0.2",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-turbo": "^1.10.14",
    "eslint-plugin-import": "^2.28.1",
    "prettier": "^2.8.8",
    "turbo": "^1.10.14"
  },
  "volta": {
    "node": "18.18.0",
    "yarn": "3.6.1"
  },
  "packageManager": "yarn@3.6.3"
}
